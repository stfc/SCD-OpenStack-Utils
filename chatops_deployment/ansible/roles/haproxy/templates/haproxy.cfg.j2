global
        log /dev/log    local0
        log /dev/log    local1 notice
        chroot /var/lib/haproxy
        stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
        stats timeout 30s
        user haproxy
        group haproxy
        daemon

        # Default SSL material locations
        ca-base /etc/ssl/certs
        crt-base /etc/ssl/private

        # See: https://ssl-config.mozilla.org/#server=haproxy&server-version=2.0.3&config=intermediate
        ssl-default-bind-ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384
        ssl-default-bind-ciphersuites TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256
        ssl-default-bind-options ssl-min-ver TLSv1.2 no-tls-tickets

defaults
        log     global
        mode    http
        option  httplog
        option  dontlognull
        timeout connect 5000
        timeout client  50000
        timeout server  50000
        errorfile 400 /etc/haproxy/errors/400.http
        errorfile 403 /etc/haproxy/errors/403.http
        errorfile 408 /etc/haproxy/errors/408.http
        errorfile 500 /etc/haproxy/errors/500.http
        errorfile 502 /etc/haproxy/errors/502.http
        errorfile 503 /etc/haproxy/errors/503.http
        errorfile 504 /etc/haproxy/errors/504.http

frontend HTTPS
mode http
bind *:80
bind *:443 ssl crt /etc/haproxy/{{ domain }}.crt
stats enable
stats uri /stats
stats refresh 10s
http-request add-header X-Forwarded-Proto https
http-request add-header X-Forwarded-Port 443
redirect scheme https if !{ ssl_fc }
option forwardfor

acl grafana hdr_sub(host) -i grafana.{{ domain }}
acl prometheus hdr_sub(host) -i prometheus.{{ domain }}
acl alertmanager hdr_sub(host) -i alertmanager.{{ domain }}
acl chatops_sub hdr_sub(host) -i chatops.{{ domain }}
acl kibana hdr_sub(host) -i kibana.{{ domain }}
acl chatops hdr_sub(host) -i {{ domain }}

use_backend GRAFANA if grafana
use_backend PROMETHEUS if prometheus
use_backend KIBANA if kibana
use_backend ALERTMANAGER if alertmanager
use_backend CHATOPS if chatops || chatops_sub

frontend PROMETHEUS
  bind *:8405
  mode http
  http-request use-service prometheus-exporter if { path /metrics }
  no log

backend GRAFANA
balance source
{% for address in (groups.grafana | map('extract', hostvars, 'ansible_ssh_host')) %}
{% if loop.first %}
server grafana_{{ loop.index }} {{ address }}:3000 check ssl verify required ca-file /etc/haproxy/ssl/grafana.crt
{% else %}
server grafana_{{ loop.index }} {{ address }}:3000 check backup ssl verify required ca-file /etc/haproxy/ssl/grafana.crt
{% endif %}
{% endfor %}

backend PROMETHEUS
balance source
{% for address in (groups.prometheus | map('extract', hostvars, 'ansible_ssh_host')) %}
server prometheus_{{ loop.index }} {{ address }}:9090 check ssl verify required ca-file /etc/haproxy/ssl/prometheus.crt
{% endfor %}

backend ALERTMANAGER
{% for address in (groups.prometheus | map('extract', hostvars, 'ansible_ssh_host')) %}
server alertmanager_{{ loop.index }} {{ address }}:9093 check ssl verify required ca-file /etc/haproxy/ssl/alertmanager.crt
{% endfor %}

backend CHATOPS
{% for address in (groups.chatops | map('extract', hostvars, 'ansible_ssh_host')) %}
{% if loop.last %}
server chatops_{{ loop.index }} {{ address }}:3000 check backup
{% else %}
server chatops_{{ loop.index }} {{ address }}:3000 check
{% endif %}
{% endfor %}

backend KIBANA
{% for address in (groups.elastic | map('extract', hostvars, 'ansible_ssh_host')) %}
server elastic_{{ loop.index }} {{ address }}:5601 check ssl verify required ca-file /etc/haproxy/ssl/kibana.crt
{% endfor %}
